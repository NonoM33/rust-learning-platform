---
interface Props {
  percentage: number;
  showLabel?: boolean;
  size?: 'sm' | 'md' | 'lg';
}

const { percentage, showLabel = true, size = 'md' } = Astro.props;

const heights = {
  sm: 'h-1',
  md: 'h-2',
  lg: 'h-3',
};
---

<div class="w-full">
  {showLabel && (
    <div class="flex justify-between text-sm mb-1">
      <span class="text-gray-600 dark:text-gray-400">Progression</span>
      <span class="font-medium text-rust-500">{percentage}%</span>
    </div>
  )}
  <div class={`w-full bg-gray-200 dark:bg-gray-700 rounded-full ${heights[size]} overflow-hidden`}>
    <div
      class={`bg-gradient-to-r from-rust-500 to-rust-600 ${heights[size]} rounded-full transition-all duration-500`}
      style={`width: ${percentage}%`}
    />
  </div>
</div>
